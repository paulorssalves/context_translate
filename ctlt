#!/bin/bash

function ctlt() {
	# run context_translate
	source $HOME/Documentos/src/context_translate/venv/bin/activate && python $HOME/Documentos/src/context_translate/translate.py $1 && deactivate 

	# get last csv file generated by context_translate
	last_csv=$(tail -n 1 "$HOME/.cache/ctrans.log")

	# select an email to send csv file to
	python $HOME/Documentos/src/automailer/curselect.py
	dest="$(head $HOME/.cache/curselect.log)"

	# compose message
	default_message="Hey there!<br><br>Here's today's material!<br><br>See you!"
	thunderbird --compose "to='$dest',attachment='$HOME/$last_csv',subject=Today's material,body='$default_message',format='1'"

	# remove logs
	rm $HOME/.cache/ctrans.log $HOME/.cache/curselect.log
}
